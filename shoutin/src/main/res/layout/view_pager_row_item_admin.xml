<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/viewPager_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal"
    android:weightSum="3">

    <RelativeLayout
        android:id="@+id/relative_middle_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginTop="7dp"
            android:layout_toLeftOf="@+id/profile_image_shout_default"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/relative_message"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginTop="15dp">

                    <ImageView
                        android:id="@+id/img_shout_image_admin"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/txt_shout_in_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_shout_in_text_background_top"
                        android:paddingBottom="3dp"
                        android:paddingLeft="60dp"
                        android:paddingTop="3dp"
                        android:text="SHOUTINSIGHTS"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_shout_title_admin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/rounded_shout_in_text_background_bottom"
                        android:paddingBottom="3dp"
                        android:paddingLeft="3dp"
                        android:paddingTop="3dp"
                        android:text="Be Travel ready; Just Shout for it!"
                        android:textColor="#333333" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/image_view_admin_shout_image"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/red_border"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="S"
                    android:textColor="#FFFFFF"
                    android:textSize="35sp"
                    android:textStyle="bold" />

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="45dp"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/image_shout_default_like"
                        android:layout_width="@dimen/shout_default_height_width"
                        android:layout_height="@dimen/shout_default_height_width"
                        android:background="@drawable/like_grey" />

                    <TextView
                        android:id="@+id/txt_shout_default_like"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="LIKES"
                        android:textSize="8sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/image_shout_default_share"
                        android:layout_width="@dimen/shout_default_height_width"
                        android:layout_height="@dimen/shout_default_height_width"
                        android:background="@drawable/share_icon_grey" />

                    <TextView
                        android:id="@+id/txt_shout_default_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="SHARE"
                        android:textSize="8sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:orientation="vertical"
                    android:paddingRight="5dp"
                    android:visibility="visible">

                    <ImageView
                        android:id="@+id/image_shout_default_comments"
                        android:layout_width="@dimen/shout_default_height_width"
                        android:layout_height="@dimen/shout_default_height_width"
                        android:background="@drawable/comments_grey"
                        android:visibility="visible" />

                    <TextView
                        android:id="@+id/txt_shout_default_comments"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:lineSpacingExtra="3dp"
                        android:text="0 COMMENTS"
                        android:textSize="8sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>