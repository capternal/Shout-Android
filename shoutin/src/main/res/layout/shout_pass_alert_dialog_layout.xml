<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="#252525"
    android:elevation="10dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_alert_message_shout_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_alert_top"
        android:fontFamily="sans-serif-light"
        android:padding="10dp"
        android:text="Do you want to hide this shout from your list ?"
        android:textColor="#FFFFFF"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/check_box_dont_show_pass_alert_again_shout_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_alert_message_shout_pass"
        android:text="Do not ask me again."
        android:buttonTint="@color/red_background_color"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_below="@+id/check_box_dont_show_pass_alert_again_shout_pass"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/txt_alert_no_shout_pass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/txt_alert_yes"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="No"
            android:textColor="#CDCDCD" />

        <TextView
            android:id="@+id/txt_alert_yes_shout_pass"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_weight="1"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Yes"
            android:textColor="#CDCDCD" />

    </LinearLayout>

</RelativeLayout>