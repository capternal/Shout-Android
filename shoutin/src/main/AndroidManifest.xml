        <activity
            android:name="com.shout.shoutin.login.SendOTPActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.shout.shoutin.main.ChatForShoutActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.shout.shoutin.main.ShoutUsersListActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />

        <service
            android:name="com.shout.shoutin.Utils.LocationBackGroundService"
            android:screenOrientation="portrait" />
        <service
            android:name="com.shout.shoutin.service.ShoutBoardBackgroundService"
            android:screenOrientation="portrait" />
        <service
            android:name="com.shout.shoutin.service.ContactSyncService"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.shout.shoutin.main.PreferencesActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.shout.shoutin.main.VideoViewActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.shout.shoutin.main.MenuDemoActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name="com.shout.shoutin.main.VideoDemoActivity"
