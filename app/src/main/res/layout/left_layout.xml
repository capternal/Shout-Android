<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_engage"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_shout_default_grey"
        android:padding="15dp"
        android:src="@drawable/engage_icon_bg_tr" />

    <RelativeLayout
        android:id="@+id/relative_shout_default_reshout"
        android:layout_width="60dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_corner_shout_default_red"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_reshout_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="2"
            android:textColor="#FFFFFF"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_reshout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_reshout_count"
            android:layout_marginTop="3dp"
            android:gravity="center_horizontal"
            android:text="RESHOUT"
            android:textColor="#FFFFFF"
            android:textSize="9sp" />

    </RelativeLayout>
</RelativeLayout>