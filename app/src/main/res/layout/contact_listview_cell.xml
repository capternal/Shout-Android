<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FCFCFC"
    android:orientation="horizontal"
    android:weightSum="3">


    <RelativeLayout
        android:id="@+id/relative_normal_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:id="@+id/linear_shout_book_cell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <!--Non shout friend list user profile image-->

            <ImageView
                android:id="@+id/imageViewBlueLove"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/invite_blue_love_icon" />

            <!--Profile imageView-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/red_border"
                    android:visibility="gone" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/linear_shout_book_cell"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_contact_person_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:capitalize="words"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="Prasad Keskar"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_contact_person_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="3dp"
                android:capitalize="words"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="8805105700"
                android:textColor="#444444"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageview_custom_checkbox_invite_screen"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:src="@drawable/invite_blue_uncheckedbox"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_invite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="3dp"
                android:capitalize="words"
                android:fontFamily="sans-serif-light"
                android:gravity="center_vertical"
                android:text="INVITE"
                android:textColor="#444444"
                android:textSize="10sp"
                android:visibility="gone" />

            <CheckBox
                android:id="@+id/chk_tick"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginBottom="7dp"
                android:layout_marginTop="7dp"
                android:checked="false"
                android:visibility="gone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutSocialConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:visibility="visible">

            <ImageView
                android:id="@+id/imageViewFacebookConnect"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/facebook_f_default"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/imageViewPhoneConnect"
                android:layout_width="20dp"
                android:layout_height="18dp"
                android:background="@drawable/call_g_default"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/btn_refresh_friend_social_type"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/refresh_grey"
                android:visibility="visible" />

            <Button
                android:id="@+id/btn_accept_friend_request"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_corner_contact_accept_background"
                android:text="ACCEPT"
                android:textColor="@color/red_background_color"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_waiting"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_corner_contact_accept_background"
                android:gravity="center"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:text="PENDING"
                android:textColor="@color/red_background_color"
                android:textSize="14sp"
                android:textStyle="normal"
                android:visibility="gone" />


        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/contact_dummy_image"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:visibility="gone" />

</RelativeLayout>